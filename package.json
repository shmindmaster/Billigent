{
  "name": "billigent",
  "version": "1.0.0",
  "description": "Enterprise-ready Azure-native clinical intelligence cockpit",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm run -r build",
    "dev": "pnpm run -r dev",
    "test": "pnpm run -r test",
    "lint": "pnpm run -r lint",
    "clean": "pnpm run -r clean",
    "db:generate": "pnpm --filter @billigent/database db:generate",
    "db:push": "pnpm --filter @billigent/database db:push",
    "db:migrate": "pnpm --filter @billigent/database db:migrate",
    "db:seed": "pnpm --filter @billigent/database db:seed",
    "populate-ai-search": "npx tsx scripts/run-ai-search-population.ts",
    "preseed:working": "pnpm --filter @billigent/database db:generate",
    "seed:working": "tsx scripts/seed-working-sets.ts"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@playwright/test": "^1.54.2",
    "@types/node": "^24.2.0",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@azure/identity": "^4.5.0",
    "@azure/keyvault-secrets": "^4.9.0",
    "@azure/storage-blob": "^12.24.0",
    "duckdb": "^1.1.1",
    "p-limit": "^6.2.0",
    "uuid": "^10.0.0"
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@10.14.0"
}