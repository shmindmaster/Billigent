# Example Environment Configuration
# Copy this file to .env and fill in your actual values

# Development Environment Configuration
NODE_ENV=development
PORT=3001
SAFE_MODE=false

# Database Configuration
DATABASE_URL="sqlserver://localhost:1433;database=billigent;user=sa;password=YourStrong@Passw0rd;encrypt=false;trustServerCertificate=true"

# Azure Services Configuration
AZURE_COSMOS_ENDPOINT="https://your-cosmos-account.documents.azure.com:443/"
AZURE_COSMOS_KEY="__set_in_runtime__"
AZURE_COSMOS_DATABASE="billigent"

# Azure Storage Configuration
AZURE_STORAGE_ACCOUNT="yourstorageaccount"
AZURE_STORAGE_FILESYSTEM="data"
AZURE_STORAGE_KEY="__set_in_runtime__"

# Azure Search Configuration
AZURE_SEARCH_ENDPOINT="https://your-search-service.search.windows.net"
AZURE_SEARCH_KEY="__set_in_runtime__"
AZURE_SEARCH_INDEX_NAME="billigent-index"

# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT="https://your-openai-resource.openai.azure.com/"
AZURE_OPENAI_API_KEY="__set_in_runtime__"
AZURE_OPENAI_DEPLOYMENT_NAME="gpt-4"

# Performance Settings
REQUEST_TIMEOUT=15000
HEALTH_CHECK_TIMEOUT=5000
READY_CHECK_TIMEOUT=10000

# Sentry Configuration
SENTRY_DSN=""
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1

# Application Configuration
APP_RELEASE=backend@1.0.0
GIT_COMMIT=development
